<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>

<?import javafx.scene.layout.Region?>
<BorderPane fx:id="root" stylesheets="@css/style.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.espinozameridaal.ui.MainMenuController">
    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" HBox.hgrow="NEVER">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="chat-title" text="Java TCP Chat" />

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="currentUserLabel"
                       style="-fx-font-weight: bold;"
                       styleClass="chat-title"
                       text="Logged in as:" />

                <Label fx:id="currentChat"
                       style="-fx-font-weight: bold;"
                       styleClass="chat-title"
                       text="Chatting with: " />
            </HBox>
        </HBox>
    </top>

    <!-- Left: user selection -->
    <left>
        <VBox prefWidth="225" spacing="12">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Section Title -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-weight: bold;"
                       styleClass="chat-title"
                       text="Friends / Users" />

                <!-- Spacer that eats all remaining space -->
                <Region HBox.hgrow="ALWAYS" />

                <!-- Leave Call button, hidden by default -->
                <Button fx:id="leaveCallButton"
                        onAction="#onLeaveCall"
                        text="Leave call"
                        visible="false"
                        styleClass="primary-button" />
            </HBox>

            <!-- Friends List -->
            <ListView fx:id="friendListView"
                      styleClass="list-style"
                      VBox.vgrow="ALWAYS" />

            <Label style="-fx-font-weight: bold;" styleClass="chat-title" text="Pending Friend Requests: " />

            <!-- Pending Friend Requests -->
            <ListView fx:id="pendingRequestsList"
                      styleClass="list-style"
                      VBox.vgrow="ALWAYS" />


            <Label style="-fx-font-weight: bold;" styleClass="chat-title" text="Add Friend" />

            <!-- Textbox for entering friend's username -->
            <TextField fx:id="addFriendField" promptText="Enter username" />

            <!-- Button for sending friend request -->
            <Button onAction="#onSendFriendRequest" styleClass="primary-button" text="Send Request" />

            <!-- Confirmation message -->
            <Label fx:id="friendRequestStatus" style="-fx-text-fill: green;" text="" />




        </VBox>
    </left>


    <!-- Center: chat area -->
    <center>
        <BorderPane>


            <!-- Chat log -->
            <center>
                <TextArea fx:id="chatArea" editable="false" wrapText="true">
                    <BorderPane.margin>
                        <Insets bottom="0" left="0" right="10" top="10" />
                    </BorderPane.margin>
                </TextArea>
            </center>

            <!-- Message input -->
            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <padding>
                        <Insets bottom="10" left="0" right="10" top="8" />
                    </padding>

                    <TextField fx:id="messageField" promptText="Type a messageâ€¦" HBox.hgrow="ALWAYS" />

                    <Button defaultButton="true" onAction="#onSendMessage" styleClass="primary-button" text="Send" />
                </HBox>
            </bottom>
        </BorderPane>
    </center>


    <right>
        <VBox styleClass="performance-box"
              prefHeight="200.0"
              prefWidth="225.0"
              spacing="12"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" left="0" right="0" bottom="0" />
            </padding>

            <!-- RTT Latest -->
            <VBox spacing="4">
                <HBox spacing="4">
                    <Label text="RTT (Latest):"
                           style="-fx-font-weight: bold;"
                           styleClass="performance-title"/>
                    <Label fx:id="rttLabel"
                           style="-fx-font-weight: bold;"
                           styleClass="performance-title"
                           text="0 ms"/>
                </HBox>

                <!-- Small RTT chart -->
                <LineChart fx:id="rttChart"
                           prefHeight="60"
                           prefWidth="200"
                           animated="false"
                           legendVisible="false"
                           verticalGridLinesVisible="false"
                           horizontalGridLinesVisible="false">
                    <xAxis>
                        <NumberAxis autoRanging="true"
                                    tickLabelsVisible="false"
                                    tickMarkVisible="false"
                                    minorTickVisible="false"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis forceZeroInRange="false"
                                    tickLabelsVisible="false"
                                    tickMarkVisible="false"
                                    minorTickVisible="false"/>
                    </yAxis>
                </LineChart>
            </VBox>

            <!-- RTT Average -->
            <VBox spacing="4">
                <HBox spacing="4">
                    <Label text="RTT (Average):"
                           style="-fx-font-weight: bold;"
                           styleClass="performance-title"/>
                    <Label fx:id="avgRttLabel"
                           style="-fx-font-weight: bold;"
                           styleClass="performance-title"
                           text="0 ms"/>
                </HBox>

                <!-- Small avg RTT chart -->
                <LineChart fx:id="avgRttChart"
                           prefHeight="60"
                           prefWidth="200"
                           animated="false"
                           legendVisible="false"
                           verticalGridLinesVisible="false"
                           horizontalGridLinesVisible="false">
                    <xAxis>
                        <NumberAxis autoRanging="true"
                                    tickLabelsVisible="false"
                                    tickMarkVisible="false"
                                    minorTickVisible="false"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis forceZeroInRange="false"
                                    tickLabelsVisible="false"
                                    tickMarkVisible="false"
                                    minorTickVisible="false"/>
                    </yAxis>
                </LineChart>
            </VBox>

            <!-- Throughput -->
            <VBox spacing="4">
                <HBox spacing="4">
                    <Label text="Throughput:"
                           style="-fx-font-weight: bold;"
                           styleClass="performance-title"/>
                    <Label fx:id="throughputLabel"
                           style="-fx-font-weight: bold;"
                           styleClass="performance-title"
                           text="0 Mbps"/>
                </HBox>

                <!-- Small throughput chart -->
                <LineChart fx:id="throughputChart"
                           prefHeight="60"
                           prefWidth="200"
                           animated="false"
                           legendVisible="false"
                           verticalGridLinesVisible="false"
                           horizontalGridLinesVisible="false">
                    <xAxis>
                        <NumberAxis autoRanging="true"
                                    tickLabelsVisible="false"
                                    tickMarkVisible="false"
                                    minorTickVisible="false"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis forceZeroInRange="false"
                                    tickLabelsVisible="false"
                                    tickMarkVisible="false"
                                    minorTickVisible="false"/>
                    </yAxis>
                </LineChart>
            </VBox>

        </VBox>
    </right>



</BorderPane>
