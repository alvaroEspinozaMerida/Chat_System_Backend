<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.espinozameridaal.ui.MainMenuController">

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="60" styleClass="top-bar">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="chat-title" text="Java TCP Chat" />

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label styleClass="chat-title" text="Logged in as:" />
                <Label fx:id="currentUserLabel" style="-fx-font-weight: bold;" styleClass="chat-title" />

                <Label fx:id="currentChat" style="-fx-font-weight: bold;" styleClass="chat-title" text="Chattting with :  " />

            </HBox>
        </HBox>
    </top>

    <!-- Left: user selection -->
    <left>
        <VBox prefWidth="200" spacing="12">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Section Title -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-weight: bold;" styleClass="chat-title" text="Friends / Users" />

                <!-- Leave Call button, hidden by default -->
                <Button fx:id="leaveCallButton" managed="false" onAction="#onLeaveCall" text="Leave call" visible="false" />
            </HBox>

            <!-- Friends List -->
            <ListView fx:id="friendListView" prefHeight="150" styleClass="list-style" VBox.vgrow="ALWAYS" />

            <Label style="-fx-font-weight: bold;" styleClass="chat-title" text="Pending Friend Requests: " />

            <ListView fx:id="pendingRequestsList" prefHeight="200" styleClass="list-style" />


            <Label style="-fx-font-weight: bold;" styleClass="chat-title" text="Add Friend" />

            <!-- Textbox for entering friend's username -->
            <TextField fx:id="addFriendField" promptText="Enter username" />

            <!-- Button for sending friend request -->
            <Button onAction="#onSendFriendRequest" styleClass="primary-button" text="Send Request" />

            <!-- Confirmation message -->
            <Label fx:id="friendRequestStatus" style="-fx-text-fill: green;" text="" />




        </VBox>
    </left>


    <!-- Center: chat area -->
    <center>
        <BorderPane>


            <!-- Chat log -->
            <center>
                <TextArea fx:id="chatArea" editable="false" wrapText="true">
                    <BorderPane.margin>
                        <Insets bottom="0" left="0" right="10" top="10" />
                    </BorderPane.margin>
                </TextArea>
            </center>

            <!-- Message input -->
            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <padding>
                        <Insets bottom="10" left="0" right="10" top="8" />
                    </padding>

                    <TextField fx:id="messageField" promptText="Type a messageâ€¦" HBox.hgrow="ALWAYS" />

                    <Button defaultButton="true" onAction="#onSendMessage" styleClass="primary-button" text="Send" />
                </HBox>
            </bottom>
        </BorderPane>
    </center>

</BorderPane>
